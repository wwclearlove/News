<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisteredActivity">


    <LinearLayout
        android:background="#10090a"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/next"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reg_touxian"
                android:background="@color/colorPrimary"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/login_lin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/reg_user"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="用户名"
                android:textColor="#747272" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/login_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/phone"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                />
            <EditText
                android:hint="手机号"
                android:textColor="#747272"
                android:id="@+id/reg_phone"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/login_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_password"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"/>
            <EditText
                android:hint="请输入密码"
                android:textColor="#747272"
                android:id="@+id/reg_paw"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/login_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_password"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"/>
            <EditText
                android:hint="请再次输入密码"
                android:textColor="#747272"
                android:id="@+id/reg_paw_two"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/login_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_em"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"/>
            <EditText
                android:hint="请输入验证码"
                android:textColor="#747272"
                android:id="@+id/reg_yzm"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@null"/>
            <TextView
                android:id="@+id/reg_code"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/login"
                android:text="获取验证码"
                android:layout_margin="2dp"
                android:background="@drawable/code_shape"
                android:layout_width="140dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/reg_okbt"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_lin"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="注册"
            android:textSize="20dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/reg_exit"
            android:background="@drawable/login_lin"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="取消"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </LinearLayout>
</LinearLayout>