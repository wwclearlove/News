<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".Activity.FindMimaActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#10090a"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="找回密码"
            android:textSize="20dp"

            android:textColor="#fffefe"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/login_lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/find_user"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="用户名"
            android:textColor="#747272" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/login_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/phone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            />
        <EditText
            android:hint="手机号"
            android:textColor="#747272"
            android:id="@+id/find_phone"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@null"/>
    </LinearLayout>


    <LinearLayout
        android:background="@drawable/login_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_em"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"/>
        <EditText
            android:hint="请输入验证码"
            android:textColor="#747272"
            android:id="@+id/find_yzm"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/find_code"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/login"
            android:text="获取验证码"
            android:layout_margin="2dp"
            android:background="@drawable/code_shape"
            android:layout_width="140dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/login_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_password"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"/>
        <EditText
            android:hint="请输入密码"
            android:textColor="#747272"
            android:id="@+id/find_paw"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/login_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_password"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"/>
        <EditText
            android:hint="请再次输入密码"
            android:textColor="#747272"
            android:id="@+id/find_paw_two"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/find_okbt"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_lin"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="确定"
            android:textSize="20dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/find_exit"
            android:background="@drawable/login_lin"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="取消"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>